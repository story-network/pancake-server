<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" packages="com.mojang.util,net.minecrell.terminalconsole">
  <Appenders>
    <Queue name="ServerGuiConsole">
      <PatternLayout pattern="[%d{HH:mm:ss} %level]: %msg%n" />
    </Queue>
    <TerminalConsole name="Console">
      <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %level [%c{1}] %minecraftFormatting{%msg}%n}{FATAL=red, ERROR=bright red, WARN=bright yellow, INFO=white, DEBUG=green bold, TRACE=blue}" disableAnsi="false"/>
    </TerminalConsole>
    <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="[%d{H:mm:ss}] [%t/%level]: %msg%n" />
        <Policies>
          <TimeBasedTriggeringPolicy />
          <OnStartupTriggeringPolicy />
        </Policies>
    </RollingRandomAccessFile>
    <Async name="AsyncConsole">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="ServerGuiConsole"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="INFO" includeLocation="true">
      <AppenderRef ref="AsyncConsole"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>